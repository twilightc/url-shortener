generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model ShortenedUrl {
  id           String        @id @default(uuid())
  shortenedUrl String
  urlCode      String        @unique
  originalUrl  String
  createDate   DateTime
  expireDate   DateTime
  OpenGraphTag OpenGraphTag?
}

model OpenGraphTag {
  id           String       @id @default(uuid())
  url          String
  title        String
  description  String
  image        String
  siteName     String
  shortenedUrl ShortenedUrl @relation(fields: [tagId], references: [id])
  tagId        String       @unique
}