generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model DataAnalytic {
  id           String         @id @default(uuid())
  ip           String         @unique
  createTimes  Int
  ShortenedUrl ShortenedUrl[]
}

model ShortenedUrl {
  id             String        @id @default(uuid())
  shortenedUrl   String
  urlCode        String        @unique
  originalUrl    String
  createDate     DateTime
  expireDate     DateTime
  OpenGraphTag   OpenGraphTag?
  DataAnalytic   DataAnalytic  @relation(fields: [dataAnalyticId], references: [id])
  dataAnalyticId String
}

model OpenGraphTag {
  id             String       @id @default(uuid())
  url            String
  title          String
  description    String
  image          String
  siteName       String
  ShortenedUrl   ShortenedUrl @relation(fields: [shortenedUrlId], references: [id])
  shortenedUrlId String       @unique
}
